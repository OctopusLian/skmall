GK,IAHL,EAGK,CAFH,WAEG,EADH,YAAA,CAAgE,MAAhE,EAAA,WAAA,EAAgE,gBAAA,CAAnC,KAAA,CAAA,UAAmC,CAAA,GAAvB,MAAuB,GAAnB,gBAAA,CAAE,KAAA,CAAA,QAAF,CAA7C,EAAuD;AAAA;AAAvD,GACG,CAHL,CAcG,EAVH,YAAA,CASK,IATL,EASK,IATL,EASK,CARH,WAQG,EAPiF,KAAA,CAAA,MAAA,IAAM,E,kBAA1F,YAAA,CAEO,MAFP,EAAA,WAAA,EAEO,gBAAA,CADH,KAAA,CAAA,KACG,CAAA,GADI,GACJ,GADK,gBAAA,CAAE,KAAA,CAAA,OAAF,CACL,GADgB,GAChB,GADiB,gBAAA,CAAE,KAAA,CAAA,OAAF,CADxB,EACiC;AAAA;AADjC,G,mBAGA,YAAA,CAEO,MAFP,EAAA,WAAA,EAAqF,SAArF,C,CAIG,CATL,CAUG,CA5BL,CAgCI,EAHJ,YAAA,CAEM,KAFN,EAAA,WAAA,EAEM,CADJ,YAAA,CAAyE,QAAzE,EAAyE;AAAjE,IAAA,KAAK,EAAC,YAA2D;AAA9C,IAAA,IAAI,EAAC,SAAyC;AAA9B,IAAA,OAAK,EAAA,MAAA,CAAA,CAAA,CAAA,KAAA,MAAA,CAAA,CAAA,CAAA,GAAA;AAAA,aAAE,QAAA,CAAA,QAAA,OAAA,QAAA,YAAF;AAAA,KAAA;AAAyB,GAAzE,EAA4D,MAA5D,CACI,CAFN,CAGI,CAnCN,CAoCI,CAxCN,CAyCI,CA1CN,CA2CI,CA7CN,C","sourcesContent":["<template>\r\n  <div class=\"page-container\">\r\n    <h1 class=\"page-title\">商品详情页</h1>\r\n    <div class=\"main-body\">\r\n      <div class=\"goods-detail\">\r\n        <div class=\"picture-box\">\r\n          <img :src=\"'data:image/jpeg;base64,'+ pic\" alt=\"\">\r\n        </div>\r\n        <div class=\"goods-info\">\r\n          <h1 class=\"title\">{{name}}</h1>\r\n          <div class=\"desc\">{{pdesc}}</div>\r\n          <ul class=\"text-info\">\r\n            <li>\r\n              <span class=\"label\">秒杀价</span>\r\n              <span class=\"seckill-price\">¥{{price}}</span>\r\n              <span class=\"real-price\">¥{{p_price}}</span>\r\n            </li>\r\n            <li>\r\n              <span class=\"label\">库存</span>\r\n              <span class=\"value\">{{num}}</span>\r\n            </li>\r\n            <li>\r\n              <span class=\"label\">单位</span>\r\n              <span class=\"value\">{{unit}}</span>\r\n            </li>\r\n            <li>\r\n              <span class=\"label\">秒杀时间</span>\r\n              <span class=\"seckill-time\">{{start_time}} -- {{end_time}}</span>\r\n            </li>\r\n            <li>\r\n              <span class=\"label\">抢购倒计时</span>\r\n              <span class=\"seckill-time\" style=\"color:red;font-size:18px;font-weight: 550;\" v-if=\"status == ''\">\r\n                {{hours}}:{{minutes}}:{{seconds}}\r\n              </span>\r\n              <span class=\"seckill-time\" style=\"color:red;font-size:18px;font-weight: 550;\" v-else>\r\n                抢购已开始\r\n              </span>\r\n              \r\n            </li>\r\n          </ul>\r\n          <div class=\"btn-box\">\r\n            <button class=\"submit-btn\" type=\"primary\" @click=\"onSubmit\">立即购买</button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport qs from \"qs\"\r\nexport default {\r\n  name: \"GoodsDetail\",\r\n  data(){\r\n    return {\r\n      id:undefined,\r\n      name:\"\",\r\n      num:undefined,\r\n      price:undefined,\r\n      pid:undefined,\r\n      pic:\"\",\r\n      p_price:\"\",\r\n      pdesc:\"\",\r\n      unit:\"\",\r\n      start_time:\"\",\r\n      end_time:\"\",\r\n\r\n      hours:\"\",\r\n      minutes:\"\",\r\n      seconds:\"\",\r\n      status:\"\"\r\n\r\n\r\n    }\r\n  },\r\n  mounted(){\r\n    this.get_seckill_by_id();\r\n\r\n    setInterval(() => {\r\n\r\n      // 开始时间 - 当前时间  \r\n      const start_time = Date.parse(this.start_time);\r\n      const now_time = Date.parse(new Date());\r\n\r\n      const sub = start_time - now_time;\r\n      if (sub >0) {\r\n        const hours = Math.floor((sub % (24 * 60 * 60 * 1000)) / (60 * 60 * 1000)); \r\n        const minutes = Math.floor((sub % (60 * 60 * 1000)) / (60 * 1000)); \r\n        const seconds = Math.floor((sub % (60 * 1000)) / (1000)); \r\n\r\n        this.hours = hours\r\n        this.minutes = minutes\r\n        this.seconds = seconds\r\n      }else {\r\n        this.status = \"抢购已开始\"\r\n         this.hours = \"\"\r\n        this.minutes = \"\"\r\n        this.seconds = \"\"\r\n      }\r\n      \r\n\r\n      \r\n\r\n\r\n\r\n\r\n      \r\n    }, 1000);\r\n            \r\n  },\r\n\r\n  methods:{\r\n\r\n    onSubmit(){\r\n\r\n      const start_time = Date.parse(this.start_time);\r\n      const now_time = Date.parse(new Date());\r\n\r\n      const sub = start_time - now_time;\r\n\r\n      if (sub > 0){\r\n        alert(\"抢购还未开始\")\r\n        return\r\n      }\r\n\r\n    \r\n      this.$axios.post(\"/seckill/front/seckill\",qs.stringify({\r\n        id:this.id\r\n      }),{\r\n        headers:{\r\n          Authorization:\"Bearer \" + localStorage.getItem(\"front_token\")\r\n        }\r\n      }).then((rep) => {\r\n      \r\n        if (rep.data.code == 200){\r\n          alert(rep.data.msg)\r\n          window.location.reload()\r\n        }else {\r\n          alert(rep.data.msg)\r\n        }\r\n      }).catch((rep) => {\r\n        console.log(rep);\r\n\r\n      })\r\n\r\n    },\r\n    get_seckill_by_id(){\r\n      this.$axios.get(\"/seckill/front/seckill_detail\",{\r\n        params:{\r\n          id:this.$route.params.id\r\n        },\r\n        headers:{\r\n          Authorization:\"Bearer \" + localStorage.getItem(\"front_token\")\r\n        }\r\n      }).then((rep) => {\r\n        console.log(rep);\r\n        if (rep.data.code == 200){\r\n          this.id = rep.data.seckill.id\r\n          this.name = rep.data.seckill.name\r\n          this.num = rep.data.seckill.num\r\n          this.price = rep.data.seckill.price\r\n          this.pid = rep.data.seckill.pid\r\n          this.pic = rep.data.seckill.pic\r\n          this.p_price = rep.data.seckill.p_price\r\n          this.pdesc = rep.data.seckill.pdesc\r\n          this.unit = rep.data.seckill.unit\r\n          this.start_time = rep.data.seckill.start_time\r\n          this.end_time = rep.data.seckill.end_time\r\n\r\n        }else{\r\n          alert(rep.data.msg)\r\n          console.log(rep.data.msg);\r\n        }\r\n\r\n      }).catch((rep) => {\r\n        console.log(rep);\r\n      })\r\n    },\r\n\r\n    \r\n  }\r\n\r\n}\r\n</script>\r\n\r\n\r\n<style scoped lang=\"scss\">\r\n.main-body{\r\n  width: 100%;\r\n  .goods-detail{\r\n    display: flex;\r\n    justify-content: flex-start;\r\n    .picture-box{\r\n      width: 380px;\r\n      height: 380px;\r\n      img{\r\n        width: 100%;\r\n        height: 100%;\r\n      }\r\n    }\r\n    .goods-info{\r\n      margin-left: 40px;\r\n      flex: 1;\r\n      text-align: left;\r\n      .desc{\r\n        padding: 5px 0;\r\n        color: #666666;\r\n        font-size: 13px;\r\n      }\r\n      .text-info{\r\n        padding-top: 30px;\r\n        li{\r\n          display: flex;\r\n          flex-direction: row;\r\n          justify-content: flex-start;\r\n          align-items: center;\r\n          padding: 10px;\r\n          .label{\r\n            font-weight: 600;\r\n            width: 100px;\r\n          }\r\n          .seckill-price{\r\n            font-size: 26px;\r\n            color: crimson;\r\n            font-weight: 600;\r\n          }\r\n          .real-price{\r\n            margin-left: 10px;\r\n            font-size: 13px;\r\n            text-decoration: line-through;\r\n          }\r\n        }\r\n      }\r\n      .btn-box{\r\n        padding-top:40px;\r\n        .submit-btn{\r\n          color: #b4a078;\r\n          border: 1px solid #b4a078;\r\n          background-color: #f5f3ef;\r\n          width: 168px;\r\n          height: 50px;\r\n          line-height: 50px;\r\n          font-size: 18px;\r\n          cursor: pointer;\r\n        }\r\n      }\r\n    }\r\n  }\r\n}\r\n</style>"],"sourceRoot":""}]}